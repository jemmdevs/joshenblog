---
import BaseLayout from './BaseLayout.astro';
// Optional banner image handled inline

interface Props {
  title: string;
  description: string;
  date: Date;
  author: string;
  authorAvatar?: string;
  image?: string;
  bannerColor?: string;
  tags?: string[];
}

const { title, description, date, author, authorAvatar, image, bannerColor, tags = [] } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(date);

// No reading time display in simplified detail view
---

<BaseLayout title={`${title} | SENRI Dev`} description={description}>
  <article>
    <!-- Banner (with optional background image) -->
    <section class="px-4 lg:px-8 py-10">
      <div class="container mx-auto">
        <div class="relative max-w-6xl mx-auto rounded-2xl shadow-xl overflow-hidden bg-primary text-white" style={bannerColor ? `background-color: ${bannerColor}` : ''}>
          <img src={image || "/bannerIMG.png"} alt={title} class="absolute right-6 bottom-0 h-[85%] object-contain pointer-events-none select-none" loading="eager" />
          <div class="relative px-6 lg:px-10 pt-14 lg:pt-20 pb-24">
            <div class="max-w-4xl pr-40">
              <h1 class="text-[20px] leading-[24px] md:text-[64px] md:leading-[70px] font-black tracking-tight">
                {title}
              </h1>
              <div class="mt-4">
                <div class="w-148 h-px bg-white/70"></div>
              </div>
              <div class="font-pixel font-normal uppercase text-[12px] md:text-[12px] leading-4 text-white flex items-center gap-3 absolute left-6 lg:left-10 bottom-6">
                <time datetime={date.toISOString()}>{formattedDate}</time>
                <span>—</span>
                <span>{author}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Content -->
    <section class="container mx-auto px-4 lg:px-8 py-12">
      <div class="max-w-3xl mx-auto">
        <div class="post-content">
          <slot />
        </div>

        <div class="mt-12 flex justify-between items-center">
          <a href="/" class="text-primary hover:underline font-medium">← Back</a>
          <button onclick="window.scrollTo({ top: 0, behavior: 'smooth' })" class="text-gray-600 hover:text-primary font-medium">Top ↑</button>
        </div>
      </div>
    </section>
  </article>
</BaseLayout>

<style is:global>
  /* Base content styles */
  .post-content {
    font-family: "Saira", "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-weight: 400;
    color: #000;
  }

  /* Paragraphs */
  .post-content p {
    font-size: 16px;
    line-height: 32px;
    margin-bottom: 1rem;
  }

  /* Headings */
  .post-content h1,
  .post-content h2,
  .post-content h3,
  .post-content h4,
  .post-content h5,
  .post-content h6 {
    font-weight: 900;
    color: #000;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .post-content h1 { font-size: 2.25rem; }
  .post-content h2 { font-size: 1.875rem; }
  .post-content h3 { font-size: 1.5rem; }
  .post-content h4 { font-size: 1.25rem; }
  .post-content h5 { font-size: 1.125rem; }
  .post-content h6 { font-size: 1rem; }

  /* Lists */
  .post-content ul,
  .post-content ol {
    font-size: 16px;
    line-height: 32px;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .post-content li {
    margin-bottom: 0.5rem;
  }

  .post-content ul {
    list-style-type: disc;
  }

  .post-content ol {
    list-style-type: decimal;
  }

  /* Nested lists */
  .post-content li > ul,
  .post-content li > ol {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  /* Links */
  .post-content a {
    color: #C62F41;
    text-decoration: none;
    font-weight: 500;
  }
  
  .post-content a:hover {
    text-decoration: underline;
  }

  /* Emphasis and strong */
  .post-content strong {
    font-weight: 700;
  }

  .post-content em {
    font-style: italic;
  }

  /* Code */
  .post-content code {
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.9em;
    background-color: #f5f5f5;
    padding: 0.2em 0.4em;
    border-radius: 3px;
  }

  .post-content pre {
    background-color: #f5f5f5;
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .post-content pre code {
    background-color: transparent;
    padding: 0;
  }

  /* Blockquotes */
  .post-content blockquote {
    border-left: 4px solid #C62F41;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #555;
    font-style: italic;
  }

  /* Horizontal rules */
  .post-content hr {
    border: none;
    border-top: 2px solid #e5e5e5;
    margin: 2rem 0;
  }
</style>

