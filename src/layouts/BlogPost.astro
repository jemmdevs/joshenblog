---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  date: Date;
  author: string;
  authorAvatar?: string;
  image?: string;
  bannerColor?: string;
  // Personalización solo para la página de detalle del post
  footerImage?: string;        // Imagen del footer (si no se especifica, usa /footerIMG.png)
  navHoverColor?: string;      // Color de hover de navbar (si no se especifica, usa #C62F41)
  navColor?: string;           // Color de botones y elementos de navbar (si no se especifica, usa #C03540)
  contentLinkColor?: string;   // Color de enlaces en el contenido del post (si no se especifica, usa #C62F41)
  navigationColor?: string;    // Color de botones "Back" y "Top" (si no se especifica, usa #C03540)
  pageBackground?: string;     // Color de fondo de la página (si no se especifica, usa #F5F5F5)
  bannerTextColor?: string;    // Color del título del banner (si no se especifica, usa blanco)
  contentTextColor?: string;   // Color del texto del contenido (si no se especifica, usa negro)
  contentHeadingColor?: string; // Color de los títulos (h2, h3, etc.) en el contenido
  logoHoverColor?: string;     // Color de hover de SENRI y WORKS (si no se especifica, usa navHoverColor)
  cardHoverColor?: string;     // Color de hover en la lista de posts (usado en página principal)
  tags?: string[];
}

const { 
  title, 
  description, 
  date, 
  author, 
  authorAvatar, 
  image, 
  bannerColor,
  footerImage,
  navHoverColor,
  navColor,
  contentLinkColor,
  navigationColor,
  pageBackground,
  bannerTextColor,
  contentTextColor,
  contentHeadingColor,
  logoHoverColor,
  cardHoverColor,
  tags = [] 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = image || '/bannerIMG.png';

const formattedDate = new Intl.DateTimeFormat('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(date);

// No reading time display in simplified detail view
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{`${title} | SENRI Dev`}</title>
    <meta name="title" content={`${title} | SENRI Dev`} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | SENRI Dev`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | SENRI Dev`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />

    <!-- Google Fonts: Saira -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Saira:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />

    <!-- Global Styles -->
    <link rel="stylesheet" href="/src/styles/global.css" />

    <!-- Performance optimizations -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />

    <!-- Custom colors for this post (CSS Variables) -->
    <style define:vars={{
      customNavColor: navColor || '#C03540',
      customNavHoverColor: navHoverColor || '#C62F41',
      customContentLinkColor: contentLinkColor || '#C62F41',
      customNavigationColor: navigationColor || '#C03540',
      customPageBackground: pageBackground || '#F5F5F5',
      customBannerTextColor: bannerTextColor || '#FFFFFF',
      customContentTextColor: contentTextColor || '#000000',
      customContentHeadingColor: contentHeadingColor || '#000000'
    }}>
      /* Aplicar colores personalizados a botones y elementos de navbar */
      .custom-nav-color {
        background-color: var(--customNavColor) !important;
      }
      .custom-nav-hover:hover {
        background-color: var(--customNavHoverColor) !important;
      }
      .custom-text-color {
        color: var(--customNavColor) !important;
      }
      .custom-text-hover:hover {
        color: var(--customNavHoverColor) !important;
      }
      
      /* Color de fondo personalizado de la página */
      body {
        background-color: var(--customPageBackground) !important;
      }
      
      /* Color del texto del banner */
      .banner-text {
        color: var(--customBannerTextColor) !important;
      }
      
      /* Color del texto del contenido (párrafos y texto normal) */
      .post-content,
      .post-content p,
      .post-content li,
      .post-content span:not(a span),
      .post-content div:not(:has(a)) {
        color: var(--customContentTextColor) !important;
      }
      
      /* Color de los títulos (h2, h3, etc.) */
      .post-content h2,
      .post-content h3,
      .post-content h4,
      .post-content h5,
      .post-content h6 {
        color: var(--customContentHeadingColor) !important;
      }
      
      /* Color de enlaces en el contenido del post - DEBE VENIR DESPUÉS PARA SOBRESCRIBIR */
      /* Máxima especificidad posible */
      html body main article section .post-content p a,
      html body main article section .post-content li a,
      html body main article section .post-content div a,
      html body main article section .post-content a,
      html body main article .post-content p a,
      html body main article .post-content li a,
      html body main article .post-content div a,
      html body main article .post-content a,
      body main article .post-content p a,
      body main article .post-content li a,
      body main article .post-content a,
      main article .post-content p a,
      main article .post-content li a,
      main article .post-content a,
      article .post-content p a,
      article .post-content li a,
      article .post-content a,
      section .post-content p a,
      section .post-content li a,
      section .post-content a,
      .post-content p a,
      .post-content li a,
      .post-content a {
        color: var(--customContentLinkColor) !important;
        text-decoration: none !important;
      }
      
      html body main article section .post-content p a:hover,
      html body main article section .post-content li a:hover,
      html body main article section .post-content a:hover,
      html body main article .post-content p a:hover,
      html body main article .post-content li a:hover,
      html body main article .post-content a:hover,
      body main article .post-content p a:hover,
      body main article .post-content li a:hover,
      body main article .post-content a:hover,
      main article .post-content p a:hover,
      main article .post-content li a:hover,
      main article .post-content a:hover,
      article .post-content p a:hover,
      article .post-content li a:hover,
      article .post-content a:hover,
      .post-content p a:hover,
      .post-content li a:hover,
      .post-content a:hover {
        color: var(--customContentLinkColor) !important;
        text-decoration: underline !important;
      }
      
      html body main article section .post-content p a:link,
      html body main article .post-content p a:link,
      body main article .post-content p a:link,
      .post-content p a:link,
      .post-content li a:link,
      .post-content a:link {
        color: var(--customContentLinkColor) !important;
      }
      
      html body main article section .post-content p a:visited,
      html body main article .post-content p a:visited,
      body main article .post-content p a:visited,
      .post-content p a:visited,
      .post-content li a:visited,
      .post-content a:visited {
        color: var(--customContentLinkColor) !important;
      }
      
      /* Color de botones de navegación (Back y Top) */
      .nav-link {
        color: var(--customNavigationColor) !important;
      }
      .nav-link:hover {
        color: var(--customContentLinkColor) !important;
      }
      
      /* Color del texto del banner (título y metadata) */
      .banner-title {
        color: var(--customBannerTextColor) !important;
      }
      .banner-metadata {
        color: var(--customBannerTextColor) !important;
      }
      .banner-divider {
        background-color: var(--customBannerTextColor) !important;
        opacity: 0.7;
      }
    </style>
  </head>
  <body class="text-gray-900 antialiased">
    <!-- Header con colores personalizados -->
    <Header customNavColor={navColor} customNavHoverColor={navHoverColor} customLogoHoverColor={logoHoverColor} pageBackground={pageBackground} />
    
    <main class="min-h-screen">
      <article>
    <!-- Banner (with optional background image) -->
    <section class="px-4 lg:px-8 py-10">
      <div class="container mx-auto">
        <div class="relative max-w-6xl mx-auto rounded-2xl shadow-xl overflow-hidden bg-primary text-white" style={bannerColor ? `background-color: ${bannerColor}` : ''}>
          <img src={image || "/bannerIMG.png"} alt={title} class="absolute right-6 bottom-0 h-[85%] object-contain pointer-events-none select-none [-webkit-user-select:none] [-webkit-user-drag:none]" loading="eager" style="-webkit-user-select: none; -webkit-user-drag: none; -webkit-appearance: none;" />
          <div class="relative px-6 lg:px-10 pt-14 lg:pt-20 pb-24">
            <div class="max-w-4xl pr-40">
              <h1 class="text-[20px] leading-[24px] md:text-[64px] md:leading-[70px] font-black tracking-tight banner-title">
                {title}
              </h1>
              <div class="absolute left-6 lg:left-10 bottom-6 right-[35%]">
                <div class="w-full h-px banner-divider mb-2"></div>
                <div class="font-pixel font-normal uppercase text-[12px] md:text-[12px] leading-4 flex items-center gap-3 banner-metadata">
                  <time datetime={date.toISOString()}>{formattedDate}</time>
                  <span>—</span>
                  <span>{author}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Content -->
    <section class="container mx-auto px-4 lg:px-8 py-12">
      <div class="max-w-3xl mx-auto">
        <div class="post-content">
          <slot />
        </div>

        <div class="mt-12 flex justify-between items-center">
          <a href="/" class="nav-link hover:underline font-medium">← Back</a>
          <button onclick="window.scrollTo({ top: 0, behavior: 'smooth' })" class="nav-link font-medium cursor-pointer transition-colors">Top ↑</button>
        </div>
      </div>
    </section>
  </article>
    </main>

    <!-- Footer con imagen personalizada -->
    <Footer customFooterImage={footerImage} customNavColor={navColor} customPageBackground={pageBackground} />
  </body>
</html>

<style is:global>
  /* Base content styles */
  .post-content {
    font-family: "Saira", "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-weight: 400;
    color: #000;
  }

  /* Paragraphs */
  .post-content p {
    font-size: 16px;
    line-height: 32px;
    margin-bottom: 1rem;
  }

  /* Headings */
  .post-content h1,
  .post-content h2,
  .post-content h3,
  .post-content h4,
  .post-content h5,
  .post-content h6 {
    font-weight: 900;
    color: var(--customContentHeadingColor) !important;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .post-content h1 { font-size: 2.25rem; }
  .post-content h2 { font-size: 1.875rem; }
  .post-content h3 { font-size: 1.5rem; }
  .post-content h4 { font-size: 1.25rem; }
  .post-content h5 { font-size: 1.125rem; }
  .post-content h6 { font-size: 1rem; }

  /* Lists */
  .post-content ul,
  .post-content ol {
    font-size: 16px;
    line-height: 32px;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .post-content li {
    margin-bottom: 0.5rem;
  }

  .post-content ul {
    list-style-type: disc;
  }

  .post-content ol {
    list-style-type: decimal;
  }

  /* Nested lists */
  .post-content li > ul,
  .post-content li > ol {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  /* Links - Color controlado por customContentLinkColor en <style define:vars> arriba */
  .post-content a {
    text-decoration: none;
    font-weight: 500;
    color: var(--customContentLinkColor) !important;
  }
  
  .post-content a:hover {
    color: var(--customContentLinkColor) !important;
    text-decoration: underline !important;
  }
  
  .post-content a:link,
  .post-content a:visited {
    color: var(--customContentLinkColor) !important;
  }

  /* Emphasis and strong */
  .post-content strong {
    font-weight: 700;
  }

  .post-content em {
    font-style: italic;
  }

  /* Code */
  .post-content code {
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.9em;
    background-color: #f5f5f5;
    padding: 0.2em 0.4em;
    border-radius: 3px;
  }

  .post-content pre {
    background-color: #f5f5f5;
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .post-content pre code {
    background-color: transparent;
    padding: 0;
  }

  /* Blockquotes */
  .post-content blockquote {
    border-left: 4px solid #C62F41;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #555;
    font-style: italic;
  }

  /* Horizontal rules */
  .post-content hr {
    border: none;
    border-top: 2px solid #e5e5e5;
    margin: 2rem 0;
  }
</style>

